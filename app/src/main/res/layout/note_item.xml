<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        app:cardElevation="4dp"
        app:strokeColor="#50afafaf"
        app:strokeWidth="1dp"
        app:cardCornerRadius="4dp"
        android:outlineAmbientShadowColor="@android:color/transparent"
        android:outlineSpotShadowColor="@android:color/transparent">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_margin="4dp">
            <ImageView
                android:id="@+id/note_item_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/note_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@string/header_sample"
                style="@style/TextView.Header"
                android:maxLines="1"
                />
            <TextView
                android:id="@+id/note_item_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@string/subheader_sample"
                style="@style/TextView.SubHeader"
                android:ellipsize="end"
                android:maxLines="5"
                 />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </com.google.android.material.card.MaterialCardView>

</androidx.appcompat.widget.LinearLayoutCompat>