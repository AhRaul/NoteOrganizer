<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

<!--    sub styles      -->

<!--    TEXT VIEWS  -->
    <style name="TextView">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="paddingStart">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_gravity">start</item>
    </style>
    <style name="TextView.Button" parent="TextView">
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="TextView.Header" parent="TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">4dp</item>
    </style>
    <style name="TextView.SubHeader" parent="TextView">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="TextView.Body" parent="TextView">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="TextView.Title" parent="TextView.Header">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="TextView.Calculator" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>
    <style name="TextView.Calculator.Number" parent="TextView.Calculator">
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>
    <style name="TextView.Calculator.Actions" parent="TextView.Calculator">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

<!--    BOTTOM SHEET DIALOG STYLE -->
    <style name="BottomSheetDialogStyle.Light" parent="AppBottomSheetDialogTheme.Light">
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <style name="BottomSheetDialogStyle.Dark" parent="AppBottomSheetDialogTheme.Dark">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">#ff000000</item>
    </style>
    <style name="AppBottomSheetDialogTheme.Dark" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:backgroundTint">@color/colorBottomSheetSurfaceDark</item>
    </style>
    <style name="AppBottomSheetDialogTheme.Light" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
    <style name="BottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet</item>
    </style>

    <!--    DIVIDER     -->
    <style name="Divider">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">?attr/colorOnSurface</item>
        <item name="android:alpha">0.12</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
<!--         Customize your theme here.-->
        <item name="elevationOverlayEnabled">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">#ffffff</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogStyle.Light</item>
    </style>
<!--     Dark application theme. -->
    <style name="AppThemeDark" parent="Theme.MaterialComponents.NoActionBar">
<!--         Customize your theme here. -->
        <item name="colorSurface">@color/colorSurfaceDark</item>
        <item name="background">@color/colorSurfaceDark</item>
        <item name="colorOnPrimary">@android:color/black</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <item name="colorOnBackground">@color/colorOnBackgroundDark</item>
        <item name="colorOnSurface">@color/colorOnBackgroundDark</item>
        <item name="colorOnError">@android:color/black</item>
        <item name="elevationOverlayEnabled">true</item>
        <item name="elevationOverlayColor">?attr/colorOnSurface</item>
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccentDark</item>
        <item name="errorTextColor">@color/errorTextColorDark</item>

        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">#00000000</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogStyle.Dark</item>
    </style>

    <!--    BUTTONS     -->
    <style name="FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">?attr/colorSurface</item>
        <item name="tint">?attr/colorAccent</item>
    </style>
    <style name="ButtonTodoChooser.Done" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@drawable/chooser_done_background_tint_statelist</item>
        <item name="iconTint">@drawable/chooser_done_statelist</item>
    </style>
    <style name="ButtonTodoChooser.Missed" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@drawable/chooser_missed_background_tint_statelist</item>
        <item name="android:textColor">@drawable/chooser_missed_statelist</item>
        <item name="iconTint">@drawable/chooser_missed_statelist</item>
        <item name="strokeColor">@drawable/chooser_missed_statelist_stroke_color</item>
    </style>
    <style name="ButtonTodoChooser.Current" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@drawable/chooser_current_background_tint_statelist</item>
        <item name="android:textColor">@drawable/chooser_current_statelist</item>
        <item name="iconTint">@drawable/chooser_current_statelist</item>
        <item name="strokeColor">@drawable/chooser_current_statelist_stroke_color</item>
    </style>
</resources>
